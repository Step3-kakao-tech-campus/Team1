{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
		"prettier",
        "react"
    ],
    "rules": {
        "prettier/prettier": [
            "error", {
                "endOfLine": "auto"
            }
        ],
        "react/react-in-jsx-scope": "off"
    }
}